#!/usr/bin/env node

var docopt = require('docopt').docopt,
    pkg = require('../package.json'),
    config = require('../lib/config'),
    server = require('../lib/server');

/*
    Docstring
*/
var doc = "I feel lucky, for The Pirate Bay   \n\
\n\
Usage:   \n\
    aaargh [<config>]   \n\
    aaargh [options]   \n\
\n\
Options:   \n\
    --host=HOST       Set server host   \n\
    --port=PORT       Set server port   \n\
    --source=URL      Set The Pirate Bay URL   \n\
    -h --help         Show this screen   \n\
    -v --version      Show version   \n\
\n\
Examples:   \n\
       aaargh (run the server with default config)   \n\
       aaargh ~/config.json   \n\
       aaargh --host localhost --port 8080   \n\
";

var cli = docopt(doc, { version: pkg.version });

/*
    Load config
*/
if (cli['<config>']) {
    // from file...
    config.load(cli['<config>']);
}
else {
    // from arguments...
    config.set('host', cli['--host']);
    config.set('port', cli['--port']);
    config.set('source', cli['--source']);
}

/*
    Set TPB URL and
    start HTTP server
*/
server.setTPB(config.source);

server.start(config.port, config.host);
